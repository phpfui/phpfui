{
    "name": "phpfui/phpfui",
    "description": "PHP Object Oriented Wrapper for the Foundation CSS Framework",
    "minimum-stability": "stable",
    "keywords": ["foundation", "framework", "html", "Object Oriented", "Object-Oriented", "PHP", "UI", "responsive", "css", "scss"],
    "homepage": "http://www.phpfui.com",
    "license": "MIT",
    "authors": [
        {
        "name": "Bruce Wells",
        "email": "brucekwells@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1 <8.4",
        "zurb/foundation": "^6.6",
        "fortawesome/font-awesome": "^5 | ^6",
        "igorescobar/jquery-mask-plugin": "^1.14",
        "components/jquery": "^3.3",
        "google/recaptcha": "^1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5|^11.0",
        "phpfui/html-unit-tester": "^1.0",
        "phpfui/phpunit-syntax-coverage": "^1.0",
        "roave/security-advisories": "dev-latest",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.8",
        "mheap/phpunit-github-actions-printer": "^1.5"
    },
    "suggest": {
        "kwn/number-to-words": "Allows words in addition to numbers for MathCaptcha"
    },
    "autoload": {
        "psr-4": {"PHPFUI\\": "src/PHPFUI/"}
    },
    "autoload-dev": {
        "psr-4": {"Fixtures\\": "tests/Fixtures/"}
    }
}
